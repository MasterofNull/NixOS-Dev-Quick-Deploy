# Root directory for persistent data (edit path for your user)
AI_STACK_DATA=/home/your-user/.local/share/ai-stack

# AIDB MCP server
AIDB_PORT=8091

# Database credentials
AIDB_POSTGRES_DB=mcp
AIDB_POSTGRES_USER=mcp
AIDB_POSTGRES_PASSWORD=change_me

# Redis credentials (optional)
AIDB_REDIS_PASSWORD=
AIDB_REDIS_HOST=redis
AIDB_REDIS_PORT=6379

# llama.cpp configuration
LLAMA_CPP_HOST=0.0.0.0
LLAMA_CPP_PORT=8080
LLAMA_CPP_DEFAULT_MODEL=Qwen/Qwen2.5-Coder-7B-Instruct
LLAMA_CPP_LOG_LEVEL=info
LLAMA_CPP_WEB_CONCURRENCY=4
HUGGING_FACE_HUB_TOKEN=

# Telemetry
AIDB_TELEMETRY_PATH=${AI_STACK_DATA}/telemetry/aidb-events.jsonl
HYBRID_TELEMETRY_PATH=${AI_STACK_DATA}/telemetry/hybrid-events.jsonl

# Hybrid coordinator (optional tuning)
MCP_SERVER_PORT=8092
LOCAL_CONFIDENCE_THRESHOLD=0.7
HIGH_VALUE_THRESHOLD=0.7
PATTERN_EXTRACTION_ENABLED=true
