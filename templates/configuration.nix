  giteaRepoIndexerPath = "${giteaAppDataDir}/indexers/repos.bleve";
  giteaDatabasePath = "${giteaAppDataDir}/gitea.db";
  giteaDomain = "@HOSTNAME@";
  giteaHttpPort = 3000;
