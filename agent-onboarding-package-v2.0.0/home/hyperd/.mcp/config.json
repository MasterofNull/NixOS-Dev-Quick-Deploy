  },
  "recommended": {
    "postgres": {
      "type": "database",
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-postgres"],
      "env": {
        "POSTGRES_URL": "postgresql://localhost:5432/aidb"
      },
      "description": "PostgreSQL/AIDB integration for direct database access",
      "tags": ["database", "postgresql", "aidb"],
      "priority": "high"
    },
    "github": {
      "type": "api",
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-github"],
      "env": {
        "GITHUB_TOKEN": "${GITHUB_TOKEN}"
      },
      "description": "GitHub repository management and automation",
      "tags": ["git", "github", "repository"],
      "priority": "high"
    },
    "securemcp": {
      "type": "security",
      "command": "securemcp",
