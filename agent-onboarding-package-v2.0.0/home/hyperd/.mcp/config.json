{
  "version": "1.0.0",
  "mcpServers": {
    "nixos": {
      "type": "nix-packages",
      "command": "nix",
      "args": ["run", "github:utensils/mcp-nixos", "--"],
      "description": "NixOS package and configuration search (130K+ packages)",
      "tags": ["nix", "nixos", "packages", "home-manager"],
